generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  mitra     Mitra?
  auditLogs AuditLog[]

  // ✅ ADD THIS
  spkRuns SpkRunLog[]
}

enum Role {
  ADMIN
  MITRA
}

model Mitra {
  id         String   @id @default(uuid())
  userId     String   @unique
  nama       String
  nik        String?
  alamat     String?
  bank       String?
  noRekening String?
  createdAt  DateTime @default(now())

  user        User         @relation(fields: [userId], references: [id])
  bebanKerja  BebanKerja[]
  honorRekaps HonorRekap[]
  dokumen     Dokumen[]

  // ✅ ADD THIS
  penilaianSPK PenilaianSPK[]
}

model Periode {
  id        String        @id @default(uuid())
  bulan     Int
  tahun     Int
  status    PeriodeStatus @default(OPEN)
  createdAt DateTime      @default(now())

  bebanKerja   BebanKerja[]
  honorRekap   HonorRekap[]
  dokumen      Dokumen[]
  penilaianSPK PenilaianSPK[]
  spkRuns      SpkRunLog[]

  @@unique([bulan, tahun])
}

enum PeriodeStatus {
  OPEN
  LOCKED
}

model BebanKerja {
  id        String @id @default(uuid())
  mitraId   String
  periodeId String

  uraian   String
  volume   Int
  satuan   String
  tarif    Decimal
  subtotal Decimal

  createdAt DateTime @default(now())

  mitra   Mitra   @relation(fields: [mitraId], references: [id])
  periode Periode @relation(fields: [periodeId], references: [id])
}

model HonorRekap {
  id        String @id @default(uuid())
  mitraId   String
  periodeId String

  totalHonor Decimal     @db.Decimal(12, 2)
  status     RekapStatus @default(DRAFT)

  approvedBy String?
  approvedAt DateTime?

  createdAt DateTime @default(now())

  mitra   Mitra   @relation(fields: [mitraId], references: [id])
  periode Periode @relation(fields: [periodeId], references: [id])

  @@unique([mitraId, periodeId])
}

enum RekapStatus {
  DRAFT
  SUBMITTED
  APPROVED
}

model Dokumen {
  id        String @id @default(uuid())
  mitraId   String
  periodeId String

  jenis    DokumenJenis
  nomor    String
  filePath String
  checksum String

  createdAt DateTime @default(now())

  mitra   Mitra   @relation(fields: [mitraId], references: [id])
  periode Periode @relation(fields: [periodeId], references: [id])

  @@unique([mitraId, periodeId, jenis])
}

enum DokumenJenis {
  SPK
  BAST
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  entity    String
  entityId  String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}

model Kriteria {
  id    String       @id @default(uuid())
  nama  String       @unique // ✅ ADD THIS
  bobot Float
  tipe  TipeKriteria
  aktif Boolean      @default(true)

  penilaian PenilaianSPK[]

  createdAt DateTime @default(now())
}

enum TipeKriteria {
  BENEFIT
  COST
}

model PenilaianSPK {
  id         String @id @default(uuid())
  mitraId    String
  kriteriaId String
  periodeId  String

  nilai Float // raw score

  mitra    Mitra    @relation(fields: [mitraId], references: [id])
  kriteria Kriteria @relation(fields: [kriteriaId], references: [id])
  periode  Periode  @relation(fields: [periodeId], references: [id])

  @@unique([mitraId, kriteriaId, periodeId])
}

model SpkRunLog {
  id        String   @id @default(uuid())
  periodeId String
  runBy     String?
  createdAt DateTime @default(now())

  periode Periode @relation(fields: [periodeId], references: [id])
  user    User?   @relation(fields: [runBy], references: [id])
}
